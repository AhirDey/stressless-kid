Program for printing the pattern-
      *
     * *
    * * *
   * * * *
  * * * * *
 * * * * * *
* * * * * * *

#include<stdio.h>
int main()
{
    int i, j, k;
    for(i=7; i>0; i--)
    {
        for(j=1; j<=i-1; j++)
        {
            printf(" ");
        }
        for(k=1; k<=8-i; k++)
        {
            printf("* ");
        }
        printf("\n");
    }
}
